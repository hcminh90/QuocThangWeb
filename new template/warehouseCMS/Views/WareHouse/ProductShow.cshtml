@using warehouseCMS.Data
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
@{
    var prod = ViewData["Products"] as DbFetchOutData;
    var data = prod.Data;
}
<div class="qtBox2">
    <div class="qtBoxTitle">Sản phẩm</div>
    <div class="qtBoxContent2">
        <div class="qtBoxNew obj01">
            <div class="qtTitle2">Danh sách các sản phẩm</div>
            <div class="qtBoxContent2">
                <table border=0 cellpadding=0 cellspacing=0 width="100%" height="100%">
                    <tr><th>Mã sản phẩm</th><th>Tên</th><th>Mô tả</th><th>Đơn vị tính</th><th>Giá</th><th>Số lượng</th><th>User cập nhật</th><th>Thời gian cập nhật</th><th></th></tr>
                    @foreach (var row in data)
                    {
                        <tr>
                            <td>@row["PROD_ID"]</td>
                            <td>@row["PROD_NAME"]</td>
                            <td>@row["PROD_DESC"]</td>
                            <td>@row["PROD_UNIT"]</td>
                            <td>@row["PROD_UNIT_PRICE"]</td>
                            <td>@row["PROD_AMOUNT"]</td>
                            <td>@row["PROD_LAST_USER_CHANGED"]</td>
                            <td>@row["PROD_LAST_TIME_CHANGED"]</td>
                            <td><a href="#">Cập nhật</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>  
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function() {
        jQuery('.obj01').addClass("hidden").viewportChecker({
            classToAdd: 'visible animated zoomIn', // Class to add to the elements when they are visible
            offset: 100    
        });
    });          
</script>